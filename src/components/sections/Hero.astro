---
import { personal } from "../../data/content";
---

<section
  id="hero"
  class="hero relative min-h-screen flex flex-col justify-center overflow-hidden"
>
  <!-- Ambient background - subtle, not distracting -->
  <div class="ambient-bg absolute inset-0 -z-10">
    <div class="orb orb-1"></div>
    <div class="orb orb-2"></div>
  </div>

  <div class="container-main">
    <div class="max-w-3xl">
      <!-- Name - the main focus -->
      <h1
        class="text-display text-primary mb-8 will-animate animate-fade-in-up"
      >
        {personal.name}
      </h1>

      <!-- Title block - simplified to just two lines -->
      <div class="space-y-1 mb-10 will-animate animate-fade-in-up delay-200">
        <p class="text-subheading text-secondary">
          {personal.title}
        </p>
        <p class="text-body text-muted">
          {personal.subtitle}
        </p>
      </div>

      <!-- Social + Location - clean row -->
      <div
        class="flex flex-wrap items-center gap-5 will-animate animate-fade-in-up delay-400"
      >
        <a
          href={personal.social.linkedin}
          target="_blank"
          rel="noopener noreferrer"
          class="text-muted hover:text-accent transition-colors duration-150"
          aria-label="LinkedIn"
        >
          <svg class="size-5" fill="currentColor" viewBox="0 0 24 24">
            <path
              d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"
            ></path>
          </svg>
        </a>
        <a
          href={personal.social.github}
          target="_blank"
          rel="noopener noreferrer"
          class="text-muted hover:text-accent transition-colors duration-150"
          aria-label="GitHub"
        >
          <svg class="size-5" fill="currentColor" viewBox="0 0 24 24">
            <path
              fill-rule="evenodd"
              clip-rule="evenodd"
              d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z"
            ></path>
          </svg>
        </a>
        <span class="text-border">Â·</span>
        <a
          href={personal.locationUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="link-animated text-body-sm"
        >
          {personal.location}
        </a>
      </div>
    </div>
  </div>

  <!-- Scroll indicator -->
  <div
    class="absolute bottom-8 left-1/2 -translate-x-1/2 will-animate animate-fade-in-up delay-500"
  >
    <div class="flex flex-col items-center gap-2 text-muted">
      <div class="w-px h-8 bg-border relative overflow-hidden">
        <div class="scroll-line absolute inset-0 bg-accent"></div>
      </div>
    </div>
  </div>
</section>

<style>
  .ambient-bg {
    overflow: hidden;
  }

  .orb {
    position: absolute;
    border-radius: 50%;
    filter: blur(100px);
    opacity: 0.4;
  }

  /* Dimmer orbs in dark mode */
  :global(.dark) .orb {
    opacity: 0.15;
  }

  .orb-1 {
    width: 300px;
    height: 300px;
    background: var(--color-accent-muted);
    top: -50px;
    right: -50px;
    animation: float 25s ease-in-out infinite;
  }

  .orb-2 {
    width: 200px;
    height: 200px;
    background: var(--color-warm-muted);
    bottom: 30%;
    left: -30px;
    animation: float 20s ease-in-out infinite reverse;
  }

  .scroll-line {
    animation: scroll-pulse 2s ease-in-out infinite;
  }

  @keyframes scroll-pulse {
    0%,
    100% {
      transform: translateY(-100%);
    }
    50% {
      transform: translateY(100%);
    }
  }

  @keyframes float {
    0%,
    100% {
      transform: translate(0, 0);
    }
    50% {
      transform: translate(20px, -20px);
    }
  }
</style>
