---
import { projects } from "../../data/content";
import ProjectCard from "../ui/ProjectCard.astro";
---

<section id="projects" class="section-padding bg-subtle">
  <div class="container-main">
    <!-- Label -->
    <p class="text-label mb-4 will-animate animate-fade-in-up">Projects</p>

    <!-- Heading -->
    <h2
      class="text-heading text-primary will-animate animate-fade-in-up delay-100"
    >
      Selected Work
    </h2>

    <p
      class="mt-4 text-body text-secondary max-w-xl will-animate animate-fade-in-up delay-200"
    >
      Personal projects and experiments outside of my day-to-day work.
      <span class="text-primary">Playgrounds for exploration and learning.</span
      >
    </p>

    <div class="mt-10 grid gap-6 sm:grid-cols-2 max-w-3xl">
      {
        projects.map((project, i) => (
          <ProjectCard project={project} index={i} />
        ))
      }
    </div>
  </div>
</section>
