---
import { projects } from "../../data/content";
import ProjectCard from "../ui/ProjectCard.astro";
import SectionHeader from "../ui/SectionHeader.astro";
import DotPattern from "../ui/DotPattern.astro";
---

<section
  id="projects"
  class="section-padding bg-subtle relative overflow-hidden"
>
  <DotPattern />

  <div class="container-main relative">
    <SectionHeader label="Projects" title="Selected Work" id="projects" />

    <p
      class="mt-4 text-body text-secondary max-w-xl will-animate animate-fade-in-up delay-200"
    >
      Some personal projects and experiments outside of my day-to-day work, for
      exploration and learning.
    </p>

    <div class="mt-10 grid gap-6 sm:grid-cols-2 max-w-3xl">
      {
        projects.map((project, i) => (
          <ProjectCard project={project} index={i} />
        ))
      }
    </div>
  </div>
</section>
