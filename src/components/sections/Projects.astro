---
import { projects } from "../../data/content";
import ProjectCard from "../ui/ProjectCard.astro";
---

<section
  id="projects"
  class="section-padding bg-subtle relative overflow-hidden"
>
  <!-- Dot Matrix Pattern -->
  <div class="absolute inset-0 bg-dots pointer-events-none"></div>

  <div class="container-main relative">
    <!-- Label -->
    <p class="text-label mb-4 will-animate animate-fade-in-up">Projects</p>

    <!-- Heading -->
    <h2
      class="text-heading text-primary group flex items-center gap-3 w-fit will-animate animate-fade-in-up delay-100"
    >
      Selected Work
      <a
        href="#projects"
        aria-label="Link to projects section"
        class="text-subheading text-muted opacity-0 group-hover:opacity-50 hover:opacity-100! transition-opacity duration-300 hover:text-accent no-underline"
      >
        #
      </a>
    </h2>

    <p
      class="mt-4 text-body text-primary max-w-xl will-animate animate-fade-in-up delay-200"
    >
      Some personal projects and experiments outside of my day-to-day work.
      Playgrounds for exploration and learning.
    </p>

    <div class="mt-10 grid gap-6 sm:grid-cols-2 max-w-3xl">
      {
        projects.map((project, i) => (
          <ProjectCard project={project} index={i} />
        ))
      }
    </div>
  </div>
</section>
