---
import { experiences } from "../../data/content";
import TimelineItem from "../ui/TimelineItem.astro";
---

<section id="experience" class="section-padding bg-subtle">
  <div class="container-main">
    <!-- Label -->
    <p class="text-label mb-4 will-animate animate-fade-in-up">Experience</p>

    <!-- Heading -->
    <h2
      class="text-heading text-primary will-animate animate-fade-in-up delay-100"
    >
      Where I've Worked
    </h2>

    <div class="mt-12">
      {
        experiences.map((exp, i) => (
          <TimelineItem
            experience={exp}
            index={i}
            isLast={i === experiences.length - 1}
          />
        ))
      }
    </div>
  </div>
</section>
