---
import { bio } from "../../data/content";
---

<section id="about" class="section-padding">
  <div class="container-main">
    <!-- Label -->
    <p class="text-label mb-4 will-animate animate-fade-in-up">About</p>

    <!-- Heading -->
    <h2
      class="text-heading text-primary group w-fit will-animate animate-fade-in-up delay-100"
    >
      Engineer with a Designer's Eye<span
        class="inline-flex align-baseline ml-4"
        ><svg
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="1.5"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="w-[0.7em] h-[0.7em] self-center"
        >
          <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
          <circle
            cx="12"
            cy="12"
            r="3"
            class="animate-blink"
            fill="var(--color-border)"></circle>
        </svg></span
      >
      <a
        href="#about"
        aria-label="Link to about section"
        class="text-subheading text-muted opacity-0 group-hover:opacity-50 hover:opacity-100! transition-opacity duration-300 hover:text-accent no-underline ml-2"
      >
        #
      </a>
    </h2>

    <div class="mt-10 space-y-5 max-w-2xl">
      {
        bio.full.map((paragraph, i) => {
          const formatted = paragraph.replace(
            /\*\*(.*?)\*\*/g,
            '<span class="text-primary font-medium">$1</span>',
          );
          return (
            <p
              class="text-body text-secondary will-animate animate-fade-in-up"
              style={`animation-delay: ${150 + i * 100}ms`}
              set:html={formatted}
            />
          );
        })
      }
    </div>

    <!-- Visual accent -->
    <div
      class="mt-14 flex items-center gap-4 will-animate animate-fade-in-left delay-600"
    >
      <div
        class="h-px flex-1 max-w-20 bg-linear-to-r from-transparent via-warm to-accent"
      >
      </div>
      <p class="text-label">Design Ã— Engineering</p>
      <div
        class="h-px flex-1 max-w-20 bg-linear-to-l from-transparent via-accent to-warm"
      >
      </div>
    </div>
  </div>
</section>
