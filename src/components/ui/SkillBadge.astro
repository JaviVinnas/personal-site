---
import type { Skill } from "../../data/content";

interface Props {
  skill: string | Skill;
  accent?: "blue" | "warm" | "neutral";
  delay?: number;
}

const { skill, accent = "blue", delay = 0 } = Astro.props;

// Normalize skill to always have name and optional url
const skillName = typeof skill === "string" ? skill : skill.name;
const skillUrl = typeof skill === "string" ? undefined : skill.url;

const accentClasses = {
  blue: "bg-accent/10 text-accent border-accent/20 hover:bg-accent/20 dark:bg-accent/20 dark:border-accent/30",
  warm: "bg-warm/10 text-warm border-warm/20 hover:bg-warm/20 dark:bg-warm/20 dark:border-warm/30",
  neutral: "bg-muted/10 text-secondary border-border hover:bg-muted/20",
};

const baseClasses = [
  "inline-flex items-center px-3 py-1.5 font-mono text-body-sm rounded-full border",
  "transition-all duration-150",
  "will-animate animate-scale-in",
  accentClasses[accent],
];

const linkClasses = skillUrl ? "cursor-pointer" : "";
---

{
  skillUrl ? (
    <a
      href={skillUrl}
      target="_blank"
      rel="noopener noreferrer"
      class:list={[...baseClasses, linkClasses]}
      style={`animation-delay: ${delay}ms`}
    >
      {skillName}
      <svg
        class="w-3 h-3 ml-1 opacity-50"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
        />
      </svg>
    </a>
  ) : (
    <span class:list={baseClasses} style={`animation-delay: ${delay}ms`}>
      {skillName}
    </span>
  )
}
