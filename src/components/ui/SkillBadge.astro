---
import type { Skill } from "../../data/content";
import ExternalLink from "../icons/ExternalLink.astro";

interface Props {
  skill: string | Skill;
  accent?:
    | "blue"
    | "warm"
    | "neutral"
    | "pink"
    | "cyan"
    | "emerald"
    | "violet"
    | "amber";
  delay?: number;
}

const { skill, accent = "blue", delay = 0 } = Astro.props;

// Normalize skill to always have name and optional url
const skillName = typeof skill === "string" ? skill : skill.name;
const skillUrl = typeof skill === "string" ? undefined : skill.url;

const accentClasses = {
  blue: "bg-accent/10 text-accent-badge border-accent/20 dark:bg-accent/20 dark:border-accent/30",
  warm: "bg-warm/10 text-warm-badge border-warm/20 dark:bg-warm/20 dark:border-warm/30",
  neutral: "bg-muted/10 text-secondary border-border",
  pink: "bg-pink/10 text-pink-badge border-pink/20 dark:bg-pink/20 dark:border-pink/30",
  cyan: "bg-cyan/10 text-cyan-badge border-cyan/20 dark:bg-cyan/20 dark:border-cyan/30",
  emerald:
    "bg-emerald/10 text-emerald-badge border-emerald/20 dark:bg-emerald/20 dark:border-emerald/30",
  violet:
    "bg-violet/10 text-violet-badge border-violet/20 dark:bg-violet/20 dark:border-violet/30",
  amber:
    "bg-amber/10 text-amber-badge border-amber/20 dark:bg-amber/20 dark:border-amber/30",
};

const hoverClasses = {
  blue: "hover:bg-accent/20 dark:hover:bg-accent/30 hover:border-accent/40",
  warm: "hover:bg-warm/20 dark:hover:bg-warm/30 hover:border-warm/40",
  neutral: "hover:bg-muted/20 hover:border-text/20",
  pink: "hover:bg-pink/20 dark:hover:bg-pink/30 hover:border-pink/40",
  cyan: "hover:bg-cyan/20 dark:hover:bg-cyan/30 hover:border-cyan/40",
  emerald:
    "hover:bg-emerald/20 dark:hover:bg-emerald/30 hover:border-emerald/40",
  violet: "hover:bg-violet/20 dark:hover:bg-violet/30 hover:border-violet/40",
  amber: "hover:bg-amber/20 dark:hover:bg-amber/30 hover:border-amber/40",
};

const baseClasses = [
  "inline-flex items-center px-3 py-1.5 font-mono text-body-sm rounded-full border",
  "transition-all duration-200 ease-out",
  "will-animate animate-scale-in",
  accentClasses[accent],
];

const linkClasses = skillUrl
  ? `cursor-pointer no-underline ${hoverClasses[accent]}`
  : "";
---

{
  skillUrl ? (
    <a
      href={skillUrl}
      target="_blank"
      rel="noopener noreferrer"
      class:list={[...baseClasses, "group", linkClasses]}
      style={`animation-delay: ${delay}ms`}
    >
      {skillName}
      <ExternalLink
        class="w-3 h-3 ml-1 opacity-40 transition-all duration-200 group-hover:opacity-100"
        strokeWidth="2.5"
      />
    </a>
  ) : (
    <span class:list={baseClasses} style={`animation-delay: ${delay}ms`}>
      {skillName}
    </span>
  )
}
