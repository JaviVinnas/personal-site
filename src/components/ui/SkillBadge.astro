---
import type { Skill } from "../../data/content";

interface Props {
  skill: string | Skill;
  accent?:
    | "blue"
    | "warm"
    | "neutral"
    | "pink"
    | "cyan"
    | "emerald"
    | "violet"
    | "amber";
  delay?: number;
}

const { skill, accent = "blue", delay = 0 } = Astro.props;

// Normalize skill to always have name and optional url
const skillName = typeof skill === "string" ? skill : skill.name;
const skillUrl = typeof skill === "string" ? undefined : skill.url;

const accentClasses = {
  blue: "bg-accent/10 text-accent border-accent/20 dark:bg-accent/20 dark:border-accent/30",
  warm: "bg-warm/10 text-warm border-warm/20 dark:bg-warm/20 dark:border-warm/30",
  neutral: "bg-muted/10 text-secondary border-border",
  pink: "bg-pink/10 text-pink border-pink/20 dark:bg-pink/20 dark:border-pink/30",
  cyan: "bg-cyan/10 text-cyan border-cyan/20 dark:bg-cyan/20 dark:border-cyan/30",
  emerald:
    "bg-emerald/10 text-emerald border-emerald/20 dark:bg-emerald/20 dark:border-emerald/30",
  violet:
    "bg-violet/10 text-violet border-violet/20 dark:bg-violet/20 dark:border-violet/30",
  amber:
    "bg-amber/10 text-amber border-amber/20 dark:bg-amber/20 dark:border-amber/30",
};

const hoverClasses = {
  blue: "hover:bg-accent/20",
  warm: "hover:bg-warm/20",
  neutral: "hover:bg-muted/20",
  pink: "hover:bg-pink/20",
  cyan: "hover:bg-cyan/20",
  emerald: "hover:bg-emerald/20",
  violet: "hover:bg-violet/20",
  amber: "hover:bg-amber/20",
};

const baseClasses = [
  "inline-flex items-center px-3 py-1.5 font-mono text-body-sm rounded-full border",
  "transition-all duration-150",
  "will-animate animate-scale-in",
  accentClasses[accent],
];

const linkClasses = skillUrl ? `cursor-pointer ${hoverClasses[accent]}` : "";
---

{
  skillUrl ? (
    <a
      href={skillUrl}
      target="_blank"
      rel="noopener noreferrer"
      class:list={[...baseClasses, linkClasses]}
      style={`animation-delay: ${delay}ms`}
    >
      {skillName}
      <svg
        class="w-3 h-3 ml-1 opacity-50"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
        />
      </svg>
    </a>
  ) : (
    <span class:list={baseClasses} style={`animation-delay: ${delay}ms`}>
      {skillName}
    </span>
  )
}
